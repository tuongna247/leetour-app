@using Vinaday.Data.Models.Extention
@using Vinaday.Web.Framework
@{
    ViewBag.Title = "Hotel";
    Layout = "~/Views/Shared/_TourLayout.cshtml";
    List<OrderModel> orders = ViewBag.Orders;
}

<div id="main-content" class="main-content container-fluid">  
    <div id="page-content" class="page-content tab-content overflow-y">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget widget-simple widget-table">
                    <table class="table table-striped table-content table-condensed boo-table table-hover bg-blue-light dataTable" id="booking-list">
                        <thead>
                            <tr>
                                <th scope="col">PNR<span class="column-sorter"></span></th>
                                <th scope="col">Tour<span class="column-sorter"></span></th>
                                <th scope="col">Customer<span class="column-sorter"></span></th>
                                <th scope="col">Note<span class="column-sorter"></span></th>
                                <th scope="col">Check-in<span class="column-sorter"></span></th>
                                <th scope="col">Status<span class="column-sorter"></span></th>
                                <th scope="col">Create<span class="column-sorter"></span></th>
                                <th scope="col" class="action">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (orders.Count > 0)
                            {
                                foreach (OrderModel order in orders)
                                {
                                    <tr class="rowlink">
                                        <td>@order.Pnr.ToUpper()</td>
                                        <td>@(order.Room != null ? order.Room.Name : string.Empty)</td>
                                        <td>
                                            @(order.Customer != null ? String.Format("{0} {1}", order.Customer.Firstname, order.Customer.Lastname) : string.Empty)
                                        </td>
                                        <td style="width: 150px;">@(order.SpecialRequest ?? "No Special Request")</td>
                                        <td>@order.StartDate</td>
                                        <td>@(Enum.GetName(typeof(Utilities.BookingStatus), order.Status))</td>
                                        <td>@order.CreatedDate</td>
                                        <td style="text-align: center;width: 50px;">
                                            <a style="color: #333; font-size: 14px; cursor: pointer;" class="edit fontello-icon-edit" href="@(string.Format("~/Booking/HotelOrderDetail/{0}", order.Id))"></a>
                                            <a style="color: #333; font-size: 15px; cursor: pointer;" class="fontello-icon-trash-1" onclick="deleteTour('@order.Id');"></a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>