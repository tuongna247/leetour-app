@model List<Vinaday.Data.Models.City>
@if (Model.Count > 0)
{
    <table id="table-cities" class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col" class="hidden-phone">Description</th>
                <th scope="col" class="hidden-phone">Description vietnam</th>
                <th scope="col" class="hidden-phone">Priority</th>
                <th scope="col" class="action" style="text-align: center;width: 200px">Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var city in Model)
            {
                <tr>
                    <td id="@city.CityId">@city.CityId</td>
                    <td class="hidden-phone">@city.Description</td>
                    <td class="hidden-phone">@city.Name</td>
                    <td class="hidden-phone">@city.Priority</td>
                    <td class="action" style="text-align: center; width: 200px">
                        <span class="quick-menu-icon" style="cursor: pointer">
                            <a class="btn btn-success btn-xs" onclick="editForm('@city.CityId', '@city.Description', '@city.Name', '@city.Priority');"><small class="glyphicon glyphicon-edit"></small></a>
                            <a class="btn btn-danger btn-xs" onclick="deleteCity('@city.CityId')"><small class="glyphicon glyphicon-trash"></small></a>
                        </span>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p>No content for this Item</p>
}