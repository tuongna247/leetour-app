@{
    ViewBag.Title = "Admin - Request Hotel";
    Layout = "~/Views/Shared/_TourLayout.cshtml";
}
@using System
@using System.Globalization
@using Vinaday.Data.Models
@model System.Collections.Generic.List<RoomReguest>
<div id="main-content" class="main-content container-fluid">
    <div id="page-content" class="page-content tab-content overflow-y">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget widget-simple widget-table">
                    <table class="table table-striped table-content table-condensed boo-table table-hover bg-blue-light dataTable">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                                <th scope="col">Room</th>
                                <th scope="col">Hotel</th>
                                <th scope="col">Total</th>
                                <th scope="col">Check-in</th>
                                <th scope="col">Check-out</th>
                                <th scope="col">Note</th>
                                <th scope="col">Create</th>
                                <th scope="col" class="action">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                var index = 1;
                                foreach (var reguest in Model)
                                {
                                    <tr>
                                        <td>@String.Format("{0}", index.ToString(CultureInfo.InvariantCulture))</td>
                                        <td>@(String.Format("{0} {1}",reguest.FirstName,reguest.LastName))</td>
                                        <td>@(!string.IsNullOrEmpty(reguest.Email)?reguest.Email:"N/A")</td>
                                        <td>@(!string.IsNullOrEmpty(reguest.Phone) ? reguest.Phone : "N/A")</td>
                                        <td>@(reguest.RoomName)</td>
                                        <td>@(reguest.HotelName)</td>
                                        <td>@(reguest.RoomTotal)</td>
                                        <td>@(String.Format("{0:MM/dd/yyyy}", reguest.CheckIn))</td>
                                        <td>@(String.Format("{0:MM/dd/yyyy}", reguest.CheckOut))</td>
                                        <td>@(reguest.Note)</td>
                                        <td>@(reguest.CreateDate)</td>
                                        <td style="text-align: center;width: 50px;">
                                            <a style="color: #333; font-size: 14px; cursor: pointer;" class="edit fontello-icon-edit"></a>
                                            <a style="color: #333; font-size: 15px; cursor: pointer;" class="fontello-icon-trash-1"></a>
                                        </td>
                                    </tr>
                                    index ++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
