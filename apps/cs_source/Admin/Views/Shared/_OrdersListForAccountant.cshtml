@using Vinaday.Web.Framework
@model List<Vinaday.Data.Models.Extention.OrderModel>
    @{
        var newBookings = Model.OrderBy(o => o.StartDate).Where(o => o.IsRead == null || o.IsRead == false).ToList();
    }

<div class="col-md-12 pull-right">
    <div class="panel-group" style="margin-bottom: 5px">
        <div class="panel panel-danger">
            <div class="panel-heading" role="tab" id="headingThree4" style="height: 30px;padding: 7px;">
                <h4 class="panel-title">
                    <a class="collapsed" data-toggle="collapse" data-parent="#accordion3" href="#4" aria-expanded="false" aria-controls="collapseThree">
                        #@newBookings.Count New Booking (Các booking vừa đặt kiểm tra cẩn thận)
                    </a>
                </h4>
            </div>
            <div id="4" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree4" aria-expanded="false">
                <div class="panel-body">
                    <table class="table table-bordered" style="margin-bottom: 0">
                        <tbody>
                            @foreach (var newBooking in newBookings)
                            {
                                <tr>
                                    <td style="padding: 5px !important;font-weight: bold">
                                        <a target="_blank" href="@(Url.Content(string.Format("~/Booking/OrderDetailAccountant/{0}", newBooking.Id)))">
                                             @Vinaday.Admin.App_Code.Utilities.ConvertDT2String(newBooking.StartDate) - @(newBooking.ProductName)
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<table id="order-list-data" class="display table table-bordered" style="width: 100%;">
    <thead>
        <tr>
            <th>ID</th>
            <th>PNR</th>
            <th style="width: 270px">Name</th>
            <th>Customer</th>
            <th>Price</th>
            <th>Check in</th>
            <th>Check out</th>
            <th>Status</th>
            <th>Create</th>
            <th>Issue By</th>
            <th>Is PO?</th>
            <th>Action</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>ID</th>
            <th>PNR</th>
            <th>Name</th>
            <th>Customer</th>
            <th>Price</th>
            <th>Check in</th>
            <th>Check out</th>
            <th>Status</th>
            <th>Create</th>
            <th>Issue By</th>
            <th>Is PO?</th>
            <th>Action</th>
        </tr>
    </tfoot>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var order in Model)
            {
                if (order == null) { continue; }
                decimal surchargeFee = 0;
                decimal discount = 0;
                decimal.TryParse(order.SurchargeFee, out surchargeFee);
                decimal.TryParse(order.Discount, out discount);
                var total = ((order.Price + surchargeFee + (order.ThirdPersonFee ?? 0) - discount) * order.Quantity)* order.RateExchange;
                <tr>
                    <td>
                        <span class="label label-danger bold">
                            @order.Id
                        </span>
                    </td>
                    <td>
                        <span class="label label-success">
                            @order.Pnr.ToUpper()
                        </span>
                    </td>
                    <td>
                        <a href="@(Url.Content(string.Format("~/Booking/OrderDetailAccountant/{0}", order.Id)))">
                            @(order.ProductName)
                        </a>

                    </td>
                    <td>@(order.Customer != null ? String.Format("{0} {1}", order.Customer.Firstname, order.Customer.Lastname) : string.Empty)</td>
                    <td>@Utilities.RoundingTo(String.Format("{0:N0}",total), 500)<sup>đ</sup></td>
                    <td>@order.StartDate</td>
                    <td>@order.EndDate</td>
                    <td>
                        @switch (order.Status)
                        {
                            case (int)Utilities.BookingStatus.Holding:
                                <span class="label label-primary">
                                    @Enum.GetName(typeof(Utilities.BookingStatus), order.Status)
                                </span>
                                break;
                            case (int)Utilities.BookingStatus.Paid:
                                <span class="label label-success">
                                    @Enum.GetName(typeof(Utilities.BookingStatus), order.Status)
                                </span>
                                break;
                            case (int)Utilities.BookingStatus.Refunded:
                                <span class="label label-primary">
                                    @Enum.GetName(typeof(Utilities.BookingStatus), order.Status)
                                </span>
                                break;
                            default:
                                <span class="label label-danger">
                                    @Enum.GetName(typeof(Utilities.BookingStatus), order.Status)
                                </span>
                                break;
                        }
                    </td>
                    <td>@order.CreatedDate</td>

                    <td class="text-center">
                        <span class="label label-info">@(string.IsNullOrEmpty(order.Management) ? "admin" : order.Management.ToLower())</span>

                    </td>
                    <td class="text-center">
                        @Html.Raw(order.OutCome > 0 ? "<span class='glyphicon glyphicon-ok'></span>" : "")

                    </td>
                    <td class="text-center" style="width: 60px;">
                        <input value="@order.OrderId" class="order-management-id" type="hidden" />
                        <a href="@(Url.Content(string.Format("~/Booking/OrderDetailAccountant/{0}", order.Id)))" class="btn btn-success btn-xs">Detail</a>

                    </td>
                </tr>

            }
        }
    </tbody>
</table>
