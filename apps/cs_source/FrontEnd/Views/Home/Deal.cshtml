                                    <p>
                                        @Html.Raw(deal.Description)
                                    </p>
                                    <a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent apply-now cta" style="background-color: #ff4081;margin: 5px 0;"
