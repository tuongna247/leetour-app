@using Vinaday.Data.Models
@model System.Collections.Generic.List<CatDetail>
@if (Model.Count > 0)
{
    <h4>Sports and Recreation</h4>
    <div role="alert" class="alert alert-success alert-dismissible">
        <button aria-label="Close" data-dismiss="alert" class="close" type="button"><span aria-hidden="true">×</span></button>
        Please select any sports and recreation facilities available at your hotel.
    </div>
    <div class="row">
        <div class="col-md-12">
            <form>
                <div class="row">
                    <div id="sport-recreation-facility-form-list">
                        @foreach (var category in Model)
                        {
                            <div class="col-md-4">
                                <label class="checkbox inline">
                                    <input type="checkbox" @(category.CheckedItem.Contains("true") ? "checked" : "") name="@category.Id" id="@category.Id" value="@category.Id"><b style="text-transform: capitalize;">@category.Name</b>
                                </label>
                            </div>
                        }
                    </div>
                </div>
            </form>

        </div>
    </div>
    <div class="clearfix"></div>
    <div class="pull-right">
        <button type="button" onclick="getTabPicture();" class="btn btn-default m-b-sm">Skip and Continue</button>
        <button type="button" onclick="saveTabSportRecreation();" class="btn btn-success m-b-sm">Save and Continue</button>
    </div>
}