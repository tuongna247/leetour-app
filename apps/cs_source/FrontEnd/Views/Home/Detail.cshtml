                                    <div u="slides" style="cursor: move; position: absolute; left: 0px; top: 0px; width: 848px; height: 470px; overflow: hidden;">

                                        @if (Model.Images.Count > 0)
                                        {
                                            foreach (HotelImages image in Model.Images)
                                            {
                                                <div class="custom-bg">
                                                    <img u="image" alt="@image.ImageName" src="@(!string.IsNullOrEmpty(image.ImageThumbnail) ? "http://admin.vinaday.com" + @Url.Content(string.Format("{0}-original.png", image.ImageThumbnail)) : "/Content/images/demo/general/no-image.jpg")" />
