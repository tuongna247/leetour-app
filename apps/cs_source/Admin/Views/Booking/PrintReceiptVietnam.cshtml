                                        <div>
                                            <hr>
                                            <h4 class="no-m m-t-md ">Cancel Fee</h4>
                                            <h1 class="no-m ">@String.Format("{0:C}", order.CancelFee)</h1>
                                        </div>
                                        <div>
                                            <hr>
                                            <h4 class="no-m m-t-md text-success">Total Final</h4>
                                            <h1 class="no-m ">@String.Format("{0:C}", order.CancelFee)</h1>
                                        </div>
