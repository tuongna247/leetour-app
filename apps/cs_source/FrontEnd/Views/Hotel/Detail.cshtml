@{
    Layout = "~/Views/Shared/_LayoutHotel.cshtml";
}

@using System.Collections
@using Vinaday.Data.Models
@using Vinaday.Data.Models.Extention
@model HotelModel
@{

    ViewBag.Title = Model.SeoTitle;
    ReviewModel review = ViewBag.Reviews;
    List<RoomModel> roomModels = (List<RoomModel>)ViewBag.roomsModel;
    var mainPhoto = Model.Images.Where(a => a.PictureType == "MainPhoto").FirstOrDefault();
    List<Nationality> nationalities = ViewBag.Nationalities;
    var checkInSession = ViewBag.CheckIn;
    var checkOutSession = ViewBag.CheckOut;
    List<int> packageNights = new List<int>();
    if (ViewBag.Nights != null)
    {
        packageNights = (List<int>)ViewBag.Nights;
        packageNights = packageNights.OrderBy(a => a).ToList();
    }
    List<RateExchange> exchanges = ViewBag.Exchanges;
}

<link href="~/Content/search.css" rel="stylesheet" />
<input type="hidden" id="hotel-id" value="@Model.Id" />
<input type="hidden" id="city-id" value="@Model.CityId" />
<input type="hidden" id="hotel-name" value="@Model.Name" />
<input type="hidden" id="hotel-lon" value="@Model.Longtitude" />
<input type="hidden" id="hotel-lat" value="@Model.Latitude" />
<input type="hidden" id="hotel-address" value="@Model.Address" />
<link rel="stylesheet" href="@Url.Content("~/Content/css/library/blueimp-gallery.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/css/library/blueimp-gallery-indicator.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/css/library/blueimp-gallery-video.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/style.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/plugins/off-canvas-menu/css/offcanvas-navigation.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/plugins/owl.carousel/owl-carousel/owl.carousel.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/plugins/owl.carousel/owl-carousel/owl.transitions.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/plugins/owl.carousel/owl-carousel/owl.theme.css")">
<style>
    #owl-demo2 .item span {
        display: block;
        width: 100%;
        height: auto;
    }

    .panel-default > .panel-heading {
        background-color: #d23bb0 !important;
    }
</style>


<div id="pageHeader" style="width: 100%; border-bottom: 1px solid #ccc; margin-bottom: 10px">
    <div class="container">
        <div class="subpage" style="display: none">
            <div class="breadcrumb" xmlns:v="http://rdf.data-vocabulary.org/#">
                <span typeof="v:Breadcrumb">
                    <a property="v:title" rel="v:url" href="https://goreise.com">
                        <i class="fa fa-angle-double-left"></i> Back to results
                    </a>
                </span>

                <span class="hidden-xs">
                    - @Model.City
                </span>
                <span class="pull-right">
                    <a style="color: #333" href="tel:84-28-38 388 382">Book online or call +84 916388382</a>

                </span>
            </div>
        </div>
    </div>
</div>
<div class="hotel-detail-map" style="margin-bottom:20px; height: 120px;background-color:white">
    <div id="map" style="width: 100%; height: 140px;"></div>
</div>
<div class="container" style="padding:0px;">
    <div>
        <ul class="breadcrumb">
            <li><a href="https://goreise.com/">Home</a></li>
            <li><a href="https://goreise.com/@Model.Country/@Model.CityId-@Model.City.Replace(" ","-")">Luxury Vacations in @Model.City</a></li>
            <li>@Model.Name</li>
        </ul>
    </div>
</div>


<section class="content" style="background-color:white;max-width:1170px; margin:0 auto;">
    <div class="detail">
        <div class="container" style="padding-bottom: 10px; margin: 0 auto; max-width: 600px;">
            <div style="height: 10px;"> </div>

            <div class="row">
                <div style="float: left; width: 30%;">
                    @if (mainPhoto != null)
                    {
                        <img style="width: 100%; height: 100%; max-width: 140px; max-height: 140px; margin-top: 10px;" class="img-circle avatar" src="@(!string.IsNullOrEmpty(mainPhoto.ImageThumbnail) ? "https://admin.goreise.com" + @Url.Content(string.Format("{0}-original.jpg", mainPhoto.ImageThumbnail.Replace("//", "/"))) : "/Content/images/demo/general/no-image.jpg")" />
                    }

                </div>
                <div style="float: left; width: 69%; padding-left: 10px;">
                    <div class="info-content" style="vertical-align: middle">
                        <div style="height: 30px;"> </div>
                        <h1 itemprop="name" style="color: #00355f; font-size: 22px; font-weight: 600;">@Model.Name </h1>
                        <input id="HotelName" value="@Model.Name" type="hidden" />
                        <span class="star star_@(Model.Star)"></span>
                        <div style="clear: both;">
                        </div>
                        <address itemtype="http://schema.org/PostalAddress" itemscope="" itemprop="address">
                            <i class="fa fa-map-marker"></i>
                            <span itemprop="streetAddress">@Model.Address </span>
                        </address>

                    </div>
                </div>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.ImportantNoteEn))
            {
                <div class="row" style="background-color: #feeec5;    border: 1px solid #fde29d; border-radius: 4px; padding: 10px; margin-top: 10px;">
                    <p>@Html.Raw(Model.ImportantNoteEn)</p>

                </div>
            }

            <!-- The Gallery as lightbox dialog, should be a child element of the document body -->

        </div>
    </div>
    <div id="blueimp-gallery" class="blueimp-gallery">
        <div class="slides"></div>
        <h3 class="title"></h3>
        <a class="prev">‹</a>
        <a class="next">›</a>
        <a class="close">×</a>
        <a class="play-pause"></a>
        <ol class="indicator"></ol>
    </div>
</section>
<div class="content detail container" style="background-color:white">
    <div id="myTabContent">
        <div class="containerGallery" style="padding-top: 10px; ">
            @if (Model.Images.Count > 0)
            {
                var hotelRes = Model.Images.Where(a => a.PictureType == "Restaurant").ToList();
                foreach (HotelImages image in hotelRes)
                {
                    <a href="@(!string.IsNullOrEmpty(image.ImageThumbnail) ? "https://admin.goreise.com" + @Url.Content(string.Format("{0}-original.jpg", image.ImageThumbnail.Replace("//","/"))) : "/Content/images/demo/general/no-image.jpg")" title="@image.ImageName" alt="@image.ImageName" data-gallery="">
                        <img class="three-columns hotelGallery" style="padding: 4px;" width="960" height="960" src="@(!string.IsNullOrEmpty(image.ImageThumbnail) ? "https://admin.goreise.com" + @Url.Content(string.Format("{0}-original.jpg", image.ImageThumbnail.Replace("//","/"))) : "/Content/images/demo/general/no-image.jpg")">
                    </a>
                }
            }
        </div>
        <section class="content" style="padding: 4px; margin: 0 auto;">
            @if (packageNights.Count > 0)
            {
                <div class="row">
                    <div class="col-md-12">
                        <h3>Package Options</h3>
                        <div>
                            <input type="button" value="Show All" onclick="ShowAll()" />
                            @foreach (var night in packageNights)
                            {
                                <input type="button" value="@night Nights" onclick="ShowNight(@night)" />
                            }
                        </div>
                    </div>
                </div>


            }

            <div id="book-now" class="mg-section showroom">
                <!--subtitle-->
                <div class="showroom-content clearfix contentLightBox">
                    <div class="checkrate" style="display:none;">

                        <div class="subsearch clearfix input-daterange">
                            <div class="form-group">
                                <span style="color: #65135b; font-size: 14px; font-family: Roboto, Arial, sans-serif">Choose your check-in date</span>
                            </div>
                            <div class="form-group has-feedback">
                                <input name="start" readonly type="text" style="width: 110px;" class="form-control date-time" id="check-in" placeholder="mm/dd/yyyy" value="@(checkInSession != null ? checkInSession.ToString("MM/dd/yyyy") : string.Empty)">
                                <span class="glyphicon glyphicon-calendar form-control-feedback" aria-hidden="true"></span>

                            </div>
                            <div class="form-group ">
                                @if (packageNights.Count > 0)
                                {
                                    <select name="night" id="selectNight" style="height: 30px; width: 80px;">
                                        @foreach (var night in packageNights)
                                        {
                                            <option value="@night"> @night nights </option>
                                        }
                                    </select>
                                }
                                else
                                {
                                    <select name="night" id="selectNight" style="height: 30px; width: 80px;">
                                        <option value="1"> 1 nights </option>
                                        <option value="2"> 2 nights </option>
                                    </select>
                                }
                            </div>
                            <div class="form-group ">
                                <button onclick="checkRatePackages();" class="btn btn-sm btn-primary icon anim fadeIn animated"><i class="fa fa-long-arrow-right"></i>Check Rates </button>
                            </div>

                        </div>
                        <!--subsearch-->
                    </div>
                    <!--checkrate-->
                    <div class="room-header clearfix hidden-xs" style="font-size: 15px; color: white; display:none;">
                        <div style="text-align: center; margin: 10px auto; color: black">
                            <select id="rate-exchange" style="border: none !important">
                                @if (exchanges.Count > 0)
                                {
                                    foreach (var exchange in exchanges)
                                    {
                                        <option value="@exchange.Id" @(@exchange.Id == 1 ? "selected" : "")>@exchange.Name</option>
                                    }
                                }
                            </select>
                        </div>

                        <!--separator-->
                    </div>
                    <!--room-header-->
                    <div class="room-content clearfix" id="gallery-list">
                    </div>

                    <!--room-content-->
                </div>

                <!--showroom-content-->
            </div>

        </section>

        <div class="container" id="reserve-form" style="padding: 4px; margin-top: 20px; ">
            <div>
                <h2 style="text-align: center">BOOK THIS HOLIDAY</h2>
                <div class="form checkout" style="padding: 4px; background-color: white; max-width: 900px; margin: 0 auto;">
                    <label style="text-decoration: underline">Travel Details</label><br />
                    <span class="input-group tight">
                        <i class="fa fa-calendar"></i>
                        <input type="text" id="travel-date" class="lg" placeholder="Check-in Date" />
                    </span>
                    <span class="input-group tight" style="float:left;">
                        <i class="fa fa-clock-o"></i>
                        <select id="duration" class="lg">
                            <option value="2"> 2 nights</option>
                            <option value="3"> 3 nights</option>
                            <option value="4"> 4 nights</option>
                            <option value="5"> 5 nights</option>
                            <option value="6"> 6 nights</option>
                            <option value="7"> 7 nights</option>
                            <option value="8"> 8 nights</option>
                            <option value="9"> 9 nights</option>
                            <option value="10"> 10 nights</option>
                            <option value="11"> 11 nights</option>
                            <option value="12"> 12 nights</option>
                            <option value="13"> 13 nights</option>
                        </select>
                    </span>

                    <span class="input-group">
                        <i class="fa fa-user"></i>
                        <input type="text" id="firt-name" class="lg" placeholder="Full Name" />
                    </span>
                    <div style="clear: both"></div>
                    <span class="input-group " style=" margin-right 2%;">
                        <i class="fa fa-envelope"></i>
                        <input type="text" id="email" class="lg" placeholder="Email Address" />
                    </span>
                    <span class="input-group " style=" margin-right 2%;">
                        <select name="nationality" class="lg" id="nationality">
                            <option value="Select your nationality">Select your nationality</option>
                            @if (nationalities != null && nationalities.Count > 0)
                            {
                                foreach (var nationality in nationalities.Where(nationality => nationality != null))
                                {
                                    <option value="@nationality.ID">@nationality.Name</option>
                                }
                            }
                        </select>
                    </span><!-- .input-group -->
                    <span class="input-group " style=" margin-right 2%;">
                        <i class="fa fa-phone"></i>
                        <input type="number" id="phone" class="lg" placeholder="Mobile Phone / WhatsApp" />
                    </span><!-- .input-group -->
                    <span class="input-group">
                        <textarea id="itinerary" class="lg" style="height: 80px; width: 98%" placeholder="Special Request?"></textarea>
                    </span><!-- .input-group -->
                    <span class="input-group tight">

                        <input class="btn btn-primary" value="Send Request" onclick="SendInquire()" />
                    </span><!-- .input-group -->
                    <span class="input-group tight">
                        &nbsp;
                    </span>
                </div>
            </div>
            <div class="clear"></div>
        </div>

        <div id="facility" class="container" aria-labelledby="facility-tab">

            <div class="row">
                <div class="col-md-12">
                    <div id="collapse2">
                        <div style="padding: 4px">
                            @Html.Raw(Model.Description) <br />
                            @if (Model.Tip != null)
                            {
                                if (!string.IsNullOrEmpty(Model.Tip.Tip1))
                                {
                                    <p class="info-title">
                                        Where to go
                                    </p>
                                    <p>
                                        @Html.Raw(Model.Tip.Tip1)
                                    </p>
                                    <div class="clearfix"></div>
                                }
                                if (!string.IsNullOrEmpty(Model.Tip.Tip2))
                                {
                                    <p class="info-title">
                                        Where to Eat
                                    </p>
                                    <p>
                                        @Html.Raw(Model.Tip.Tip2)
                                    </p>
                                    <div class="clearfix"></div>
                                }
                                if (!string.IsNullOrEmpty(Model.Tip.Tip3))
                                {
                                    <p class="info-title">
                                        Other Service
                                    </p>
                                    <p>
                                        @Html.Raw(Model.Tip.Tip3)
                                    </p>
                                    <div class="clearfix"></div>
                                }
                            }
                            <!--feature-box-->
                            @if (Model.SportRecreations.Count > 0)
                            {
                                <div class="row" style="list-style: inside">
                                    @foreach (var sport in Model.SportRecreations)
                                    {
                                        <p style="text-transform: capitalize" class="col-xs-4"><i class="fa fa-check"></i> @sport.Name</p>
                                    }
                                </div>
                                <div class="clearfix"></div>
                            }


                            @if (Model.IsWifi)
                            {
                                <p>Internet Available in all rooms: <i class="fa fa-check"></i> Free WiFi</p>
                                <div class="clearfix"></div>
                            }
                            @if (Model.ParkingAvailable)
                            {
                                <p><i class="fa fa-check"></i> Car Park</p>
                                <div class="clearfix"></div>
                            }


                        </div>
                    </div>
                </div>

            </div>
            <div class="row" style="margin: 0px auto;">
                <div class="panel-body">
                    <div style="padding: 4px; margin-top: 20px;">

                        @if (!string.IsNullOrEmpty(Model.EarliestCheckIn))
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold">Check-in time: </div>
                                <div class="col-xs-6">@Model.EarliestCheckIn</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.CheckOut))
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold"> Check-out time: </div>
                                <div class="col-xs-6">@Model.CheckOut</div>
                            </div>
                        }
                        @if (Model.ShowAirportTransferAvailable)
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold"> Airport Transfer: </div>
                                <div class="col-xs-6">Available </div>
                            </div>
                        }
                        @if (Model.ShowAirportTransferFee)
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold"> Airport Transfer Fee: </div>
                                <div class="col-xs-6">@Model.AirportTransferFee</div>
                            </div>
                        }
                        @if (Model.ShowBreakfastCharge.HasValue && Model.ShowBreakfastCharge.Value)
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold">Breakfast Charge Extra: </div>
                                <div class="col-xs-6">@Model.BreakfastCharge</div>
                            </div>
                        }
                        @if (Model.NumberOfRestaurants > 0)
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold">Number Of Restaurants: </div>
                                <div class="col-xs-6">@Model.NumberOfRestaurants</div>
                            </div>
                        }@if (Model.ShowDistanceFromManCity)
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold"> Distance from City Center: </div>
                                <div class="col-xs-6">@Model.ShowDistanceFromManCity</div>
                            </div>
                        }
                        @if (Model.ShowEarliestCheckIn)
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold">Earliest Check-In: </div>
                                <div class="col-xs-6">@Model.EarliestCheckIn</div>
                            </div>

                        }
                        @if (Model.ShowParkingAvailable)
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold">Parking: </div>
                                <div class="col-xs-6"> Available </div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.TimeToAirport))
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold">Time To Airport: </div>
                                <div class="col-xs-6">(@Model.TimeToAirport) Minutes</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.RoomService))
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold">Room Service: </div>
                                <div class="col-xs-6"> (@Model.RoomService)</div>
                            </div>
                        }@if (!string.IsNullOrEmpty(Model.RoomVoltage))
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold"> Room Voltage: </div>
                                <div class="col-xs-6">(@Model.RoomVoltage)</div>
                            </div>

                        }
                        @if (!string.IsNullOrEmpty(Model.YearHotelBuilt))
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold">Year Hotel Built: </div>
                                <div class="col-xs-6">@Model.YearHotelBuilt</div>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.YearHotelLastRenovated))
                        {
                            <div class="row">
                                <div class="col-xs-6" style="font-weight: bold">Year Hotel Last Renovated: </div>
                                <div class="col-xs-6">@Model.YearHotelLastRenovated</div>
                            </div>

                        }

                        <div class="clearfix"></div>
                        <div id="cancellation"></div>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <b> Keywords</b>
                    <br />
                    @if (!string.IsNullOrEmpty(Model.HashTagEn))
                    {
                        var keys = Model.HashTagEn.Trim().Split(',');
                        foreach (string key in keys)
                        {
                            <a target="blank" href="https://goreise.com/search/@key.TrimStart().Replace(' ', '-')">@key.TrimStart()</a>
                            <text>,</text>
                        }
                    }
                </div>
            </div>
        </div>

    </div>

