        function initMap() {
            var lat = $("#hotel-lat").val();
            var lng = $("#hotel-lon").val();
            var myLatlng = { lat: parseFloat(lat), lng: parseFloat(lng) };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 16,
                center: myLatlng
            });

            var marker = new google.maps.Marker({
                position: myLatlng,
                map: map,
                title: 'Click to zoom'
            });

            map.addListener('center_changed', function () {
                // 3 seconds after the center of the map has changed, pan back to the
                // marker.
                window.setTimeout(function () {
                    map.panTo(marker.getPosition());
                }, 3000);
            });

            marker.addListener('click', function () {
                map.setZoom(16);
                map.setCenter(marker.getPosition());
            });
        }

        function ShowReview() {
            $("#Review").show();
            $("#Rating").hide();
            $("#Other").hide();
        }

        function ShowRating() {
            $("#Rating").show();
            $("#Review").hide();
            $("#Other").hide();
        }

        function SendInquire() {
            var CheckInDate = $("#travel-date").val();
            var HowManyNight = $("#duration").val();
            var Budget = $("#buget").val();
            var Flight = $("#flight").val();
            var Adult = $("#adult").val();
            var Childrent = $("#children").val();
            var Infants = $("#Infants").val();
            var Gender = $("input:radio[name ='gender']:checked").val();
            var FullName = $("#firt-name").val();
            var Email = $("#email").val();
            var Nationality = $("#nationality").val();
            var Phone = $("#phone").val();
            var SpecialRequest = $("#itinerary").val();

            var allVals = [];
            $('#destinations input[type="checkbox"]:checked').each(function () {
                allVals.push($(this).val());
            });
            var flag = false;
            $("#firt-name").css({ "border": "solid 1px #d5d5d5" });
            $("#last-name").css({ "border": "solid 1px #d5d5d5" });
            $("#email").css({ "border": "solid 1px #d5d5d5" });
            $("#adult").css({ "border": "solid 1px #d5d5d5" });
            $("#duration").css({ "border": "solid 1px #d5d5d5" });
            $("#nationality").css({ "border": "solid 1px #d5d5d5" });
            $("#travel-date").css({ "border": "solid 1px #d5d5d5" });
            $("#confirm-email").css({ "border": "solid 1px #d5d5d5" });
            $("#phone").css({ "border": "solid 1px #d5d5d5" });
            if (Email === "") {
                $("#email").css({ "border": "solid 1px red" });
                flag = true;
            }
            if (Adult === "") {
                $("#adult").css({ "border": "solid 1px red" });
                flag = true;
            }
            if (Nationality === "") {
                $("#nationality").css({ "border": "solid 1px red" });
                flag = true;
            }
            if (Phone === "") {
                $("#phone").css({ "border": "solid 1px red" });
                flag = true;
            }
            if (CheckInDate === "") {
                $("#travel-date").css({ "border": "solid 1px red" });
                flag = true;
            }
            if (HowManyNight === "") {
                $("#duration").css({ "border": "solid 1px red" });
                flag = true;
            }
            if (FullName === "") {
                $("#firt-name").css({ "border": "solid 1px red" });
                flag = true;
            }
            var fullDate = moment(CheckInDate).format("dddd, MMMM Do YYYY");
            if (!flag) {
                swal({
                    title: "",
                    text: "Please wait a moment ...",
                    imageUrl: "/Content/images/processing.gif",
                    timer: 2000
                });

                var objectModel =
                {
                    CheckInDate: fullDate,
                    HowManyNight: HowManyNight,
                    Budget: Budget,
                    Flight: Flight,
                    Adult: Adult,
                    Childrent: Childrent,
                    Infants: Infants,
                    Gender: Gender,
                    FullName: FullName,
                    Email: Email,
                    Nationality: Nationality,
                    Phone: Phone,
                    SpecialRequest: SpecialRequest
                };
                $.ajax({
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(objectModel),
                    dataType: "json",
                    url: "/send-inquiry-hotel"
                })
                    .success(function (result) {
                        if (result !== "" && result.Status === 2) {
                            $("#un-show-inquiry").show();
                            $("#show-inquiry").hide();
                            $('html,body').animate({
                                scrollTop: 0
                            }, 700);
                            swal("Done!", "Our travel consultant will get to you within next 24 hours", "success");
                        }
                    })
                    .error(function (error) {
                        alert(error);
                    });
                return true;
            } else {
                swal({ title: "goreise.com says:", text: "Please fill all the red boxes to continue!", confirmButtonText: "OK" });
                return false;
            }
        }

        function ShowOther() {
            $("#Other").show();
            $("#Review").hide();
            $("#Rating").hide();

        }

        function detectmob() {
            if (navigator.userAgent.match(/Android/i)
                    || navigator.userAgent.match(/webOS/i)
                    || navigator.userAgent.match(/iPhone/i)
                    || navigator.userAgent.match(/iPad/i)
                    || navigator.userAgent.match(/iPod/i)
                    || navigator.userAgent.match(/BlackBerry/i)
                    || navigator.userAgent.match(/Windows Phone/i)
            ) {
                $("#notification").show();
                //$("#inner-wrap").css("margin-top", "76px");
            } else {

            }
        }


        detectmob();

