@using Vinaday.Web.Framework
@model List<Vinaday.Data.Models.Extention.OrderModel>

<table id="order-list-data" class="display table table-bordered" style="width: 100%;">
    <thead>
        <tr>
            <th>ID</th>
            <th>PNR</th>
            <th style="width: 270px">Name</th>
            <th>Customer</th>
            <th>Price</th>
            <th>Check in</th>
            <th>Check out</th>
            <th>Status</th>
            <th>Create</th>
            <th>Issue By</th>
            <th>Is PO?</th>
            <th>Action</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>ID</th>
            <th>PNR</th>
            <th>Name</th>
            <th>Customer</th>
            <th>Price</th>
            <th>Check in</th>
            <th>Check out</th>
            <th>Status</th>
            <th>Create</th>
            <th>Issue By</th>
            <th>Is PO?</th>
            <th>Action</th>
        </tr>
    </tfoot>
    <tbody>
        @if (Model.Count > 0)
            {
                foreach (var order in Model)
                {
            <tr>
                <td>
                    <span class="label label-danger bold">
                        @order.Id
                    </span>
                </td>
                <td>
                    <span class="label label-success">
                        @order.Pnr.ToUpper()
                    </span>
                </td>
                <td>
                    <a href="@(Url.Content(string.Format("/Booking/OrderDetail/{0}", order.Id)))">
                        @(order.ProductName)
                    </a>

                </td>
                <td>@(order.Customer != null ? String.Format("{0} {1}", order.Customer.Firstname, order.Customer.Lastname) : string.Empty)</td>
                <td>@String.Format("{0:C2}", order.Total)</td>
                <td>@order.StartDate</td>
                <td>@order.EndDate</td>
                <td>
                    @switch (order.Status)
                            {
                                case (int)Utilities.BookingStatus.Holding:
                            <span class="label label-danger">
                                @Enum.GetName(typeof(Utilities.BookingStatus), order.Status)
                            </span>
                                    break;
                                case (int)Utilities.BookingStatus.Paid:
                            <span class="label label-success">
                                @Enum.GetName(typeof(Utilities.BookingStatus), order.Status)
                            </span>
                                    break;
                                case (int)Utilities.BookingStatus.Refunded:
                            <span class="label label-primary">
                                @Enum.GetName(typeof(Utilities.BookingStatus), order.Status)
                            </span>
                                    break;
                                default:
                            <span class="label label-warning">
                                @Enum.GetName(typeof(Utilities.BookingStatus), order.Status)
                            </span>
                                    break;
                            }
                </td>
                <td>@order.CreatedDate</td>

                <td class="text-center">
                    <span class="label label-info">@(string.IsNullOrEmpty(order.Management) ? "admin" : order.Management.ToLower())</span>

                </td>
                <td class="text-center">
                    @Html.Raw(order.OutCome > 0 ? "<span class='glyphicon glyphicon-ok'></span>" : "")

                </td>
                <td class="text-center" style="width: 60px;">
                    <input value="@order.Id" class="order-management-id" type="hidden" />
                    <a href="@(Url.Content(string.Format("/Booking/OrderDetail/{0}", order.Id)))" class="btn btn-success btn-xs">Detail</a>

                </td>
            </tr>

                }
            }
    </tbody>
</table>
