<body style="background-color: #E0E0E0">
    <div id="outer-wrap">
        <div id="inner-wrap" itemtype="http://schema.org/Hotel" itemscope="">
            @Html.Partial("_Header")

            <div class="container">
                <div class="subpage" style="margin-top: 0!important;text-align: left;">
                    <div class="breadcrumb" xmlns:v="http://rdf.data-vocabulary.org/#">
                        <span typeof="v:Breadcrumb">
                            <a property="v:title" rel="v:url" href="https://goreise.com/">
                                Home
                            </a>&nbsp;››&nbsp;
                        </span>
                        <span>
                            {{city}}
                        </span>
                    </div>
                    <h3 style="font-size: 22px; margin-top: 0;font-family: 'Open Sans', sans-serif; " class="title_fitter_ks">
                        {{pagingInfo.totalItems}} of the  best luxury hotels & resorts in {{city}} found.
                    </h3>
                </div>

                <div class="section-filter">
                    <div class="main clearfix">
                        <div class="column">
                            <div class="col-xs-12 col-sm-3 tour-results-left" id="sidebar" role="navigation" style="padding: 0">
                                <div class="hidden-sm hidden-md hidden-lg">
                                    <div id="filter-tours-2" ng-show="hideSearchPanel" class="filter-tours2">
                                        <div class="sidebar-nav">
                                            <div class="filter">
                                                <div id="accordion" class="panel-group panel-group-vinaday">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="">
                                <div class="content-filter">
                                    <div class="checkrate" style="margin-bottom: 5px; padding-bottom: 40px;">
                                        <form class="form-inline" ng-submit="search()" role="form">
                                            <span class="input-group" style="float: left; width: 100%; margin-right: 3px;">
                                                <input id="key" ng-model="pagingInfo.search" style="padding: 3px 5px 3px 10px !important; height: 32px !important; width: 100%" type="text" placeholder="Enter hotel name...">
                                                <i class="glyphicon glyphicon-search form-control-feedback"></i>
                                            </span>
                                        </form>
                                    </div>

                                </div>
                                <article class="r clearfix" ng-repeat="hotel in hotels">
                                    <a class="hotel_name" target="_new" href="{{hotel.HotelUrl}}" class="sd">
                                        <img ng-src="{{hotel.ImageUrl}}" class="hidden-lg  hidden-md" alt="{{hotel.Name}}">
                                        <div class="hidden-lg hidden-md ">
                                            <div class="showdetailsmall"> </div>
                                            <span class="cell">
                                                <h3>{{hotel.Name}}</h3>
                                                <more><span style="font-size: 13px;">View this Hotel</span></more>
                                            </span>

                                        </div>
                                        <div class="img hidden-sm hidden-sx" style="background-image: url('{{hotel.ImageUrl}}')"></div>

                                        <div class="detail visible-lg visible-md">
                                            <h2 class="title" style="text-transform: uppercase;">
                                                {{hotel.Name}}
                                            </h2>
                                            <h3>{{hotel.Address}}</h3>
                                            <div ng-bind-html="trustAsHtml(hotel.Description)"></div>
                                            <div class="lastDiv">
                                                <b>Best for:</b> <span ng-repeat="theCollection in hotel.TheCollections" class="">{{theCollection.Description}}, </span>
                                            </div>
                                        </div>
                                    </a>

                                    <aside class="visible-lg">
                                        <ul>
                                            @*<li>
                                                <svg>
                                                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#svg-moon-stroke">
                                                        <svg id="svg-moon-stroke" viewBox="0 0 512 512" width="100%" height="100%">
                                                            <path d="m346 412c24.7-12.5 46-30.7 62.3-53.2-0.816 0.38-1.5 0.809-2.31 1.19-79.8 37.2-173 5.24-209-71.3-35.7-76.6 0.001-169 79.8-206 0.544-0.254 0.997-0.465 1.58-0.628-83.1-5.27-158 49-180 129-21 81.6 19.5 167 96.6 203 48.3 22.2 104 21.2 152-2.79z"></path>
                                                        </svg>
                                                    </use>
                                                </svg>
                                                <span>&nbsp; 2 nights</span>
                                            </li>*@
                                            <li ng-if="hotel.Price>0">
                                                <svg>
                                                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#svg-pound-stroke">
                                                        <svg id="svg-pound-stroke" viewBox="0 0 512 512" width="100%" height="100%">
                                                            <path d="m 374.62662,432.37888 -237.25324,0 0,-65.29968 q 25.12333,-7.90103 33.63282,-24.63263 8.50951,-16.73159 8.50951,-50.19478 l -35.65888,0 0,-50.42719 35.65888,0 0,-60.65201 q 0,-44.38521 29.78329,-72.96835 29.98589,-28.58312 79.01686,-28.58312 27.55464,0 45.58669,3.950511 18.23466,3.718128 28.97284,7.203867 l 0,72.503562 -9.11731,0 q -15.39816,-10.922 -28.97286,-15.33729 -13.57469,-4.64765 -25.32592,-4.64765 -21.07119,0 -34.03806,13.94299 -12.76427,13.71061 -12.76427,38.57562 l 0,46.01187 88.53944,0 0,50.42719 -88.53944,0 q 0,20.68209 -9.72516,41.36423 -9.52252,20.68208 -24.51548,29.97743 l 0,2.55623 156.21029,0 0,66.2292 z"></path>
                                                        </svg>
                                                    </use>
                                                </svg>
                                                <span> from ${{hotel.Price}} </span>
                                            </li>
                                            <li class="enquiry">
                                                <!-- Component - H3 Call us -->
                                                <h3 class="call-us">
                                                    Call us on
                                                    <span class="InfinityNumber">(+84) 028 383 88382 </span>
                                                    to start tailoring your holiday
                                                </h3>
                                                <!-- /Component - H3 Call us -->
                                            </li>
                                            <li>
                                                <a href="{{hotel.HotelUrl}}">
                                                    <span class="rotate">
                                                        <svg>
                                                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#svg-arrow-stroke">
                                                                <svg id="svg-arrow-stroke" viewBox="0 0 512 512" width="100%" height="100%">
                                                                    <path d="M351 0 161 256 351 512"></path>
                                                                </svg>
                                                            </use>
                                                        </svg>
                                                    </span>
                                                    <span>View this Hotel</span>
                                                </a>
                                            </li>
                                        </ul>
                                    </aside>
                                </article>

                                <div class="tier-foot" style="padding-top: 4px">
                                    <button style="margin-top: 5px; width: 100%;background-color: #ab8e66" class="btn btn-info btn-small" ng-show="hasMore()" ng-click="showMore()">
                                        <i class="icon-plus icon-white"></i> Load more hotels
                                    </button>

                                    <div ng-show="loadingContent" style="text-align: center;">
                                        <div class="lightBox" style="opacity: 0.6; z-index: 10; display: inline"> </div>
                                        <div class="loader-content" style="z-index: 11"></div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div style="border-top: 1px solid black; font-size: 30px; margin-bottom: 20px; position: relative; text-align: right; margin-top: 5px;">
                                        <h2 style="font-size: 12px; color: black; margin-top: 5px;">{{statusBar}}</h2>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


        <div ng-show="loading">
            <div class="m-app-loading" ng-animate-children>
                <div class="animated-container" style="background-color: #fff;">

                    <div class="messaging">
                        <div align="center">
                            <div class="contener_general">
                                <div class="contener_mixte">
                                    <div class="ballcolor ball_1">&nbsp;</div>
                                </div>
                                <div class="contener_mixte">
                                    <div class="ballcolor ball_2">&nbsp;</div>
                                </div>
                                <div class="contener_mixte">
                                    <div class="ballcolor ball_3">&nbsp;</div>
                                </div>
                                <div class="contener_mixte">
                                    <div class="ballcolor ball_4">&nbsp;</div>
                                </div>
                            </div>

                            <div style="padding-top: 35px;">
                                <div style="color: #65135b; font-weight: 300; font-size: 40px; font-family: 'Open Sans', sans-serif; ; padding-top: 20px;">
                                    We take you to the most beautiful places on earth...
                                </div>

                                <div style="color: #65135b; font-weight: 300; font-size: 30px; font-family: 'Open Sans', sans-serif;">
                                    life is magnifique!
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @Scripts.Render("~/bundles/hotel1")
        <script src="@Url.Content("~/Scripts/app/app.js")"></script>
        <script src="@Url.Content("~/Scripts/app/services/hotelModel.js")"></script>
        <script src="@Url.Content("~/Scripts/app/services/hotelService.js")"></script>
        <script src="@Url.Content("~/Scripts/app/controllers/hotelController.js")"></script>
        @Scripts.Render("~/bundles/pluginsJS")
        @Html.Partial("_Footer")
        <script src="@Url.Content("~/Content/plugins/multiselect/jquery.multiselect.js")"></script>

        <script>
            jQuery(document).ready(function ($) {
                var active = true;
                $('.filter-tours').hide();
                $('#collapse-init').click(function (e) {
                    e.preventDefault();
                    if (active) {
                        active = false;
                        $('.filter-tours').show();
                    } else {
                        active = true;
                        $('.filter-tours').hide();
                    }
                });
            });
        </script>

    </div>

    <a href="#" id="backToTop"></a>
</body>
</html>