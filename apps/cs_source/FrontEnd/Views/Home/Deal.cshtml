                    if (deal == null) { continue; }
                    if (deal.Priority != 1)
                    {
                        continue;
                    }
                    var countdown = (deal.Countdown - DateTime.Now).TotalHours;
                    <input type="hidden" value="@countdown" id="deal" />
                    <div class="carousel">
                        <div class="slides slide-one build-your-business-for-the-future-and-partner-with-google-for-work">
