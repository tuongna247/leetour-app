@using System.Collections
@using Vinaday.Data.Models
@using Vinaday.Data.Models.Extention
@model HotelModel
@{

    ViewBag.Title = Model.SeoTitle;
    ReviewModel review = ViewBag.Reviews;
    List<RoomModel> roomModels = (List<RoomModel>)ViewBag.roomsModel;
    var mainPhoto = Model.Images.Where(a => a.PictureType == "MainPhoto").FirstOrDefault();
}

<link href="~/Content/search.css" rel="stylesheet" />
<input type="hidden" id="hotel-id" value="@Model.Id" />
<input type="hidden" id="city-id" value="@Model.CityId" />
<input type="hidden" id="hotel-name" value="@Model.Name" />
<input type="hidden" id="hotel-lon" value="@Model.Longtitude" />
<input type="hidden" id="hotel-lat" value="@Model.Latitude" />
<input type="hidden" id="hotel-address" value="@Model.Address" />
<link rel="stylesheet" href="@Url.Content("~/Content/css/library/blueimp-gallery.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/css/library/blueimp-gallery-indicator.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/css/library/blueimp-gallery-video.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/style.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/plugins/owl.carousel/owl-carousel/owl.carousel.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/plugins/owl.carousel/owl-carousel/owl.transitions.css")">
<link rel="stylesheet" href="@Url.Content("~/Content/plugins/owl.carousel/owl-carousel/owl.theme.css")">
<style>
    #owl-demo2 .item span {
        display: block;
        width: 100%;
        height: auto;
    }

    .panel-default > .panel-heading {
        background-color: #d23bb0 !important;
    }
</style>


<div id="pageHeader" style="width: 100%; border-bottom: 1px solid #ccc; margin-bottom: 10px">
    <div class="container">
        <div class="subpage" style="display: none">
            <div class="breadcrumb" xmlns:v="http://rdf.data-vocabulary.org/#">
                <span typeof="v:Breadcrumb">
                    <a property="v:title" rel="v:url" href="https://goreise.com">
                        <i class="fa fa-angle-double-left"></i> Back to results
                    </a>
                </span>

                <span class="hidden-xs">
                    - @Model.City
                </span>
                <span class="pull-right">
                    <a style="color: #333" href="tel:84-28-38 388 382">Book online or call (84-28) -38 388 382</a>

                </span>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div>
        <ul class="breadcrumb">
            <li><a href="https://goreise.com/">Home</a></li>
            <li><a href="https://goreise.com/@Model.Country/@Model.CityId-@Model.City.Replace(" ","-")">Luxury Vacations in @Model.City</a></li>
            <li>@Model.Name</li>
        </ul>
    </div>
</div>

<div class="hotel-detail-map" style="margin-bottom:20px; height: 120px;">
    <div id="map" style="width: 100%; height: 140px;"></div>
</div>
<section class="content">
    <div class="detail">
        <div class="container" style="padding-bottom: 10px; margin: 0 auto; max-width: 600px;">
            <div style="height: 10px;"> </div>

            <div class="row">
                <div style="float: left; width: 30%;">
                    @if (mainPhoto != null)
                    {
                    <img style="width: 100%; height: 100%; max-width: 140px; max-height: 140px; margin-top: 10px;" class="img-circle avatar" src="@(!string.IsNullOrEmpty(mainPhoto.ImageThumbnail) ? "https://admin.goreise.com" + @Url.Content(string.Format("{0}-original.jpg", mainPhoto.ImageThumbnail.Replace("//", "/"))) : "/Content/images/demo/general/no-image.jpg")" />
                    }

                </div>
                <div style="float: left; width: 69%; padding-left: 10px;">
                    <div class="info-content" style="vertical-align: middle">
                        <div style="height: 30px;"> </div>
                        <h1 itemprop="name" style="color: #00355f; font-size: 22px; font-weight: 600;">@Model.Name </h1>

                        <span class="star star_@(Model.Star)"></span>
                        <div style="clear: both;">
                        </div>
                        <address itemtype="http://schema.org/PostalAddress" itemscope="" itemprop="address">
                            <i class="fa fa-map-marker"></i>
                            <span itemprop="streetAddress">@Model.Address </span>
                        </address>
                        <p style="font-size: 16px; color:red"><i class="fa fa-flash"></i> Flash Deals 30%OFF - Send Inquiry to book it</p>
                    </div>
                </div>
            </div>
            <!-- The Gallery as lightbox dialog, should be a child element of the document body -->

        </div>
    </div>
    <div id="blueimp-gallery" class="blueimp-gallery">
        <div class="slides"></div>
        <h3 class="title"></h3>
        <a class="prev">‹</a>
        <a class="next">›</a>
        <a class="close">×</a>
        <a class="play-pause"></a>
        <ol class="indicator"></ol>
    </div>
</section>
<div class="content detail container">
    <ul class="nav nav-tabs  nav-justified hidden-xs" id="myTab" role="tablist" style="min-width: 400px; margin: 0px auto;">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true" aria-expanded="true"><i class="fa fa-image"></i> Images</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false"><i class="fa fa-bookmark"></i> Description</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false"><i class="fa fa-shopping-cart"></i> Send a Request</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="facility-tab" data-toggle="tab" href="#facility" role="tab" aria-controls="facility" aria-selected="false"><i class="fa fa-reorder"></i> Facilities </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="room-tab" data-toggle="tab" href="#room" role="tab" aria-controls="contact" aria-selected="false"><i class="fa fa-hotel"></i> Rooms </a>
        </li>
    </ul>
    <ul class="nav nav-tabs  nav-justified visible-xs-block" id="myTab" role="tablist" style="margin: 0px auto;width: 260px;">
        <li class="nav-item active" style="float: left">
            <a class="nav-link   " id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" style="border: none;" aria-selected="true" aria-expanded="true"><i class="fa fa-image"></i></a>
        </li>
        <li class="nav-item" style="float: left">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" style="border: none;" aria-selected="false"><i class="fa fa-bookmark"></i></a>
        </li>
        <li class="nav-item" style="float: left">
            <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" style="border: none;" aria-selected="false"><i class="fa fa-shopping-cart"></i></a>
        </li>
        <li class="nav-item" style="float: left">
            <a class="nav-link" id="facility-tab" data-toggle="tab" href="#facility" role="tab" aria-controls="facility" style="border: none;" aria-selected="false"><i class="fa fa-reorder"></i> </a>
        </li>
        <li class="nav-item" style="float: left">
            <a class="nav-link" id="room-tab" data-toggle="tab" href="#room" role="tab" aria-controls="contact" style="border: none;" aria-selected="false"><i class="fa fa-hotel"></i> </a>
        </li>
    </ul>
    <div style="clear: both;  height: 30px;">

    </div>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade in active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="containerGallery" style="padding-top: 10px;">
                @if (Model.Images.Count > 0)
                {
                    var hotelRes = Model.Images.Where(a => a.PictureType == "Restaurant").ToList();
                    foreach (HotelImages image in hotelRes)
                    {
                        <a href="@(!string.IsNullOrEmpty(image.ImageThumbnail) ? "https://admin.goreise.com" + @Url.Content(string.Format("{0}-original.jpg", image.ImageThumbnail.Replace("//","/"))) : "/Content/images/demo/general/no-image.jpg")" title="@image.ImageName" alt="@image.ImageName" data-gallery="">
                            <img class="three-columns hotelGallery" style="padding: 4px;" width="960" height="960" src="@(!string.IsNullOrEmpty(image.ImageThumbnail) ? "https://admin.goreise.com" + @Url.Content(string.Format("{0}-original.jpg", image.ImageThumbnail.Replace("//","/"))) : "/Content/images/demo/general/no-image.jpg")">
                        </a>
                    }
                }
            </div>
        </div>
        <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <section class="content"  style="padding: 4px; background-color: white;  max-width: 900px; margin: 0 auto;">
                <div class="detail">
                    <div class="container">
                        <div class="row" style="margin: 0px auto;">
                            <div class="panel-body">
                                <div style="padding: 4px;margin-top: 20px;">
                                    @Html.Raw(Model.Description) <br />
                                    @if (!string.IsNullOrEmpty(Model.EarliestCheckIn))
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold">Check-in time </div>
                                            <div class="col-sm-6">@Model.EarliestCheckIn</div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.CheckOut))
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold"> Check-out time </div>
                                            <div class="col-sm-6">@Model.CheckOut</div>
                                        </div>
                                    }
                                    @if (Model.ShowAirportTransferAvailable)
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold"> Airport Transfer </div>
                                            <div class="col-sm-6">Available </div>
                                        </div>
                                    }
                                    @if (Model.ShowAirportTransferFee)
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold"> Airport Transfer Fee </div>
                                            <div class="col-sm-6">@Model.AirportTransferFee</div>
                                        </div>
                                    }
                                    @if (Model.ShowBreakfastCharge.HasValue && Model.ShowBreakfastCharge.Value)
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold">Breakfast Charge Extra </div>
                                            <div class="col-sm-6">@Model.BreakfastCharge</div>
                                        </div>
                                    }
                                    @if (Model.NumberOfRestaurants > 0)
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold">Number Of Restaurants </div>
                                            <div class="col-sm-6">@Model.NumberOfRestaurants</div>
                                        </div>
                                    }@if (Model.ShowDistanceFromManCity)
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold"> Distance from City Center </div>
                                            <div class="col-sm-6">@Model.ShowDistanceFromManCity</div>
                                        </div>
                                    }
                                    @if (Model.ShowEarliestCheckIn)
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold">Earliest Check-In </div>
                                            <div class="col-sm-6">@Model.EarliestCheckIn</div>
                                        </div>

                                    }
                                    @if (Model.ShowParkingAvailable)
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold">Parking </div>
                                            <div class="col-sm-6"> Available </div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.TimeToAirport))
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold">Time To Airport </div>
                                            <div class="col-sm-6">(@Model.TimeToAirport) Minutes</div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.RoomService))
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold">Room Service </div>
                                            <div class="col-sm-6"> (@Model.RoomService)</div>
                                        </div>
                                    }@if (!string.IsNullOrEmpty(Model.RoomVoltage))
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold"> Room Voltage </div>
                                            <div class="col-sm-6">(@Model.RoomVoltage)</div>
                                        </div>

                                    }
                                    @if (!string.IsNullOrEmpty(Model.YearHotelBuilt))
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold">Year Hotel Built </div>
                                            <div class="col-sm-6">@Model.YearHotelBuilt</div>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.YearHotelLastRenovated))
                                    {
                                        <div class="row">
                                            <div class="col-sm-3" style="font-weight: bold">Year Hotel Last Renovated </div>
                                            <div class="col-sm-6">@Model.YearHotelLastRenovated</div>
                                        </div>

                                    }
                                    <div class="row">
                                        <div class="col-sm-12">
                                            <b> Keywords</b>
                                            <br />
                                            @if (!string.IsNullOrEmpty(Model.HashTagEn))
                                            {
                                                var keys = Model.HashTagEn.Trim().Split(',');
                                                foreach (string key in keys)
                                                {
                                                    <a target="blank" href="https://goreise.com/search/@key.TrimStart().Replace(' ', '-')">@key.TrimStart()</a>
                                                    <text>,</text>
                                                }
                                            }
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div id="cancellation"></div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </section>
        </div>
        <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
            <div class="panel-group" >
                <div class="panel" style="padding: 4px; margin-top: 20px;">
                    <div>
                        <h2 style="text-align: center">BOOK THIS HOLIDAY</h2>
