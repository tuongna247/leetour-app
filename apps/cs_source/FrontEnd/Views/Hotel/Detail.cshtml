        function SendInquire() {
            var CheckInDate = $("#travel-date").val();
            var HowManyNight = $("#duration").val();
            var Budget = $("#buget").val();
            var Flight = $("#flight").val();
            var Adult = $("#adult").val();
            var Childrent = $("#children").val();
