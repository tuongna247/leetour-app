                    <div class="clear"></div>
                </div>
            </div>


        </div>
        <div class="tab-pane fade" id="facility" role="tabpanel" aria-labelledby="facility-tab">
            <div class="panel-group">
                <div class="panel "  style="padding: 4px; background-color: white;  max-width: 900px; margin: 0 auto;">
                    <div class="row">
                        <div class="col-md-12">
                            <div id="collapse1">
                                <div style="padding: 4px">
                                    @if (Model.Images.Count > 0)
                                    {

                                        var hotelBar = Model.Images.Where(a => a.PictureType == "Bar").ToList();
                                        if (hotelBar.Count > 0)
                                        {
                                            foreach (HotelImages image in hotelBar)
                                            {
                                                string[] contents = !string.IsNullOrEmpty(image.Description) ? image.Description.Split(',') : new string[0];
                                                <div class="row" style="margin: 4px; border-bottom: solid 1px #cccccc">
                                                    <div class="col-sm-4">
                                                        <img style="width: 100%; margin-bottom: 2px" src="@(!string.IsNullOrEmpty(image.ImageThumbnail) ? "https://admin.goreise.com" + @Url.Content(string.Format("{0}-original.jpg", image.ImageThumbnail)) : "/Content/images/demo/general/no-image.jpg")">
                                                    </div>
                                                    <div class="col-sm-8">
                                                        @foreach (var content in contents)
                                                        {
                                                            @content
                                                            <br />
                                                        }
                                                    </div>
                                                </div>
                                                <div class="clearfix"></div>
                                            }
                                        }
                                        else if (Model.Facilities.Count > 0)
                                        {
                                            <div class="row" style="margin: 4px; border-bottom: solid 1px #cccccc">
                                                @foreach (var facilitie in Model.Facilities)
                                                {
                                                    <li class="col-sm-4">@facilitie.Name</li>
                                                }
                                            </div>
                                            <div class="clearfix"></div>
                                        }

                                    }
                                </div>
                            </div>

                            <div id="collapse2">
                                <div style="padding: 4px">
                                    <!--feature-box-->
                                    @if (Model.SportRecreations.Count > 0)
                                    {
                                        <div class="row" style="list-style: inside">
                                            @foreach (var sport in Model.SportRecreations)
                                            {
                                                <li style="text-transform: capitalize" class="col-xs-4">@sport.Name</li>
                                            }
                                        </div>
                                        <div class="clearfix"></div>
                                    }


                                    @if (Model.IsWifi)
                                    {
                                        <p>Internet Available in all rooms: Free WiFi</p>
                                        <div class="clearfix"></div>
                                    }
                                    @if (Model.ParkingAvailable)
                                    {
                                        <p>Car Park</p>
                                        <div class="clearfix"></div>
                                    }

                                    @if (Model.Tip != null)
                                    {
                                        if (!string.IsNullOrEmpty(Model.Tip.Tip1))
                                        {
                                            <p class="info-title">
                                                Where to go
                                            </p>
                                            <p>
                                                @Html.Raw(Model.Tip.Tip1)
                                            </p>
                                                    <div class="clearfix"></div>
                                        }
                                        if (!string.IsNullOrEmpty(Model.Tip.Tip2))
                                        {
                                            <p class="info-title">
                                                Where to Eat
                                            </p>
                                            <p>
                                                @Html.Raw(Model.Tip.Tip2)
                                            </p>
                                                    <div class="clearfix"></div>
                                        }
                                        if (!string.IsNullOrEmpty(Model.Tip.Tip3))
                                        {
                                            <p class="info-title">
                                                Other Service
                                            </p>
                                            <p>
                                                @Html.Raw(Model.Tip.Tip3)
                                            </p>
                                                    <div class="clearfix"></div>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

