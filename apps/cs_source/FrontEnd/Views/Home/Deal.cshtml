                                        </div>
                                        <div class="mdl-card__actions" style="padding: 0 25px;">
                                            <a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent apply-now cta"
                                               data-g-action="View more" data-g-event="Work: Partners" data-g-label="Header" href="@deal.Url">Book now</a>
                                        </div>
                                    </div>
                                }

