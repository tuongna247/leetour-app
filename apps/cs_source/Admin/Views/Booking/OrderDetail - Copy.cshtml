                                                                    break;
                                                                case (int)Utilities.PaymentMethod.Credit:
                                                            <li>
                                                                Method:
                                                                <div class="pull-right">
                                                                    <b><i class="glyphicon glyphicon-credit-card"></i> Credit</b>
