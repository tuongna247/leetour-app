@using System.Collections.Generic
@using System.Linq
@using System.Security.Claims
@using Vinaday.Data.Models
@using Vinaday.Data.Models.Extention
@using Vinaday.Web.Framework
@model List<Detail>
@{
    ViewBag.Title = "Tour Itinerary - Management";
    var role = ((ClaimsIdentity)User.Identity).Claims
       .Where(c => c.Type == ClaimTypes.Role)
       .Select(c => c.Value).FirstOrDefault();
    Layout = role.Contains("Master Admin") ? "~/Views/Shared/_MasterLayout.cshtml" : (role.Contains("Master SEO") ? "~/Views/Shared/_MasterSEO.cshtml" : "~/Views/Shared/_ContentLayout.cshtml");
    Tour tour = ViewBag.Tour;
    List<ItemModel> mealItems = ViewBag.Meals;
    List<ItemModel> transportItems = ViewBag.Transports;
}


@if (tour != null)
{
    <input type="hidden" id="tourId" value="@tour.Id" />
    <div class="page-title">
        <h3>Tour Itinerary</h3>
        <div class="page-breadcrumb">
            <ol class="breadcrumb">
                <li><a href="@Url.Content("/Product/Tour")">Tour</a></li>
                <li class="active">Tour Itinerary Management</li>
            </ol>
        </div>

    </div>
    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-transparent">
                    <div class="panel-heading clearfix">
                        <div role="group" class="pull-left">
                            <div class="form-group">
                                <select id="language-tour-itinerary" class="form-control">
                                    <option value="2">English</option>
                                    <option value="1">Vietnam</option>
                                    <option value="3">German</option>
                                    <option value="4">French</option>
                                    <option value="5">Danish</option>
                                </select>
                            </div>
                        </div>
                        <div role="group" class="pull-right">
                            <a href="@Url.Content(string.Format("~/Product/TourBasic/{0}", tour.Id))" class="btn btn-success m-b-sm">Basic Info</a>
                            <a href="@Url.Content(string.Format("~/Product/TourDetail/{0}", tour.Id))" class="btn btn-success m-b-sm">Detail</a>
                            <a href="@Url.Content(string.Format("~/Product/TourPhoto/{0}", tour.Id))" class="btn btn-success m-b-sm">Photos galery</a>
                            <a disabled href="@Url.Content(string.Format("~/Product/TourItinerary/{0}", tour.Id))" class="btn btn-success m-b-sm">Itinerary</a>
                            <a href="@Url.Content(string.Format("~/Product/TourPrice/{0}", tour.Id))" class="btn btn-success m-b-sm">Rates Control</a>
                            <a href="@Url.Content(string.Format("~/Product/TourSurcharge/{0}", tour.Id))" class="btn btn-success m-b-sm">Surcharges</a>
                            <a href="@Url.Content(string.Format("~/Product/TourPromotion/{0}", tour.Id))" class="btn btn-success m-b-sm">Promotions</a>
                            <a href="@Url.Content(string.Format("~/Product/TourPriceOption/{0}", tour.Id))" class="btn btn-success m-b-sm">Price Option</a>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div id="tour-itinerary">
                        <input type="hidden" id="child-tour-id" value="@tour.Id" />
                        <div class="panel-body">
                            @if (tour.Type == (int) Utilities.TourType.Tour)
                            {
                                <section id="cd-timeline" class="cd-container">
                                    @if (Model.Count > 0)
                                    {
                                        foreach (Detail detail in Model)
                                        {
                                            if (detail == null)
                                            {
                                                continue;
                                            }
                                            <div class="cd-timeline-block">
                                                <div class="cd-timeline-img cd-success">
                                                    <strong>@detail.SortOrder</strong>
                                                </div> <!-- cd-timeline-img -->
                                                <div class="cd-timeline-content">
                                                    <h2>@detail.Itininary</h2>
                                                    @Html.Raw(detail.Content)
                                                    <hr/>
                                                    <dl>
                                                        <dt>Meal</dt>
                                                        <dd>@(!string.IsNullOrEmpty(detail.Meal) ? detail.Meal.Substring(0, detail.Meal.Length - 2) : detail.Meal)</dd>
                                                        @if (!string.IsNullOrEmpty(detail.ImageDetail))
                                                        {
                                                            <dt>Image</dt>
                                                            <dd><img  src="@Url.Content(detail.ImageDetail)" style="width: 200px"/></dd>
                                                        }
                                                        
                                                        <dt>Over Night</dt>
                                                        <dd>@detail.OverNight</dd>
                                                        <dt>Transport</dt>
                                                        <dd>@(!string.IsNullOrEmpty(detail.Transport) ? detail.Transport.Substring(0, detail.Transport.Length - 2) : detail.Transport)</dd>
                                                    </dl>
                                                    <div class="pull-right">
                                                        <a onclick="updateItineraryForm('@detail.Id', 1)" href="javascript:void(0);" class="btn btn-success btn-xs"><small class="glyphicon glyphicon-edit"></small></a>
                                                        <a onclick="deleteItinerary('@detail.Id')" href="javascript:void(0);" class="btn btn-danger btn-xs"><small class="glyphicon glyphicon-trash"></small></a>
                                                    </div>
                                                    <span class="cd-date">Day @detail.SortOrder</span>
                                                </div> <!-- cd-timeline-content -->
                                            </div>
                                        }
                                    }
                                    <div class="cd-timeline-block text-center">
                                        <div class="cd-timeline-img cd-primary">
                                            <i class="fa fa-paperclip"></i>
                                        </div> <!-- cd-timeline-img -->
                                        <div class="cd-timeline-content">
                                            <a data-target="#add-itinerary-modal" data-toggle="modal" class="btn btn-success btn-addon m-b-sm btn-xs">Add new</a>

                                        </div> <!-- cd-timeline-content -->
                                    </div>
                                </section>
                            }
                            else
                            {
                                <section class="panel">
                                    @if (Model.Count > 0)
                                    {
                                        foreach (Detail detail in Model)
                                        {
                                            <div class="panel-body">

                                                <h2>@detail.Itininary</h2>
                                                @Html.Raw(detail.Content)
                                                <hr/>
                                                <dl>
                                                    <dt>Meal</dt>
                                                    <dd>@(!string.IsNullOrEmpty(detail.Meal) ? detail.Meal.Substring(0, detail.Meal.Length - 2) : detail.Meal)</dd>
                                                    <dt>Transport</dt>
                                                    <dd>@(!string.IsNullOrEmpty(detail.Transport) ? detail.Transport.Substring(0, detail.Transport.Length - 2) : detail.Transport)</dd>
                                                </dl>
                                                <div class="pull-right">
                                                    <a onclick="updateItineraryForm('@detail.Id', 2)" href="javascript:void(0);" class="btn btn-success btn-xs"><small class="glyphicon glyphicon-edit"></small></a>
                                                    <a onclick="deleteItinerary('@detail.Id') " href="javascript:void(0);" class="btn btn-danger btn-xs"><small class="glyphicon glyphicon-trash"></small></a>
                                                </div>

                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <div class="pull-left">
                                            <a data-target="#add-itinerary-modal" data-toggle="modal" class="btn btn-success btn-addon m-b-sm btn-xs">Add new</a>
                                        </div>
                                    }

                                </section>
                            }


                            <hr/>
                            <div class="pull-right">
                                <a class="btn btn-success m-b-sm" href="@Url.Content(string.Format("~/Product/TourPrice/{0}", tour.Id))">Save and Continue</a>
                                <a class="btn btn-default m-b-sm" href="@Url.Content("~/Product/Tour")">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- Row -->
    </div>
    <div class="modal fade" id="add-itinerary-modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Add itinerary</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <form>
                            @if (tour.Type == (int)Utilities.TourType.Tour)
                            {
                                <div class="form-group col-md-12">
                                    <label class="control-label" for="sort-order">Day itinerary</label>

                                    <select id="sort-order" class="form-control">
                                        @for (var i = 1; i < 30; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>

                                </div>

                                <div class="form-group col-md-12">
                                    <label class="control-label" for="title">Title</label>

                                    <input id="title" type="text" class="form-control" placeholder="Title">

                                </div>
                            }

                            <div class="form-group col-md-12">
                                <label class="control-label" for="content">Content</label>

                                <div id="content"></div>

                            </div>
                            <div class="form-group clearfix">
                                <label for="meal" class="col-sm-2 control-label">Meal</label>
                                <div class="form-horizontal">
                                    <div class="col-sm-10">
                                        <div id="meal">
                                            @if (mealItems != null)
                                            {
                                                foreach (var mealItem in mealItems)
                                                {
                                                    <div class="checkbox col-md-4">
                                                        <label>
                                                            <input type="checkbox" @(mealItem.Checked ? "checked" : "") name="@mealItem.Id" id="@mealItem.Id" value="@mealItem.Id">@mealItem.Name
                                                        </label>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <br />
                            <div class="form-group">
                                <label for="transport" class="col-sm-2 control-label">Transport</label>
                                <div class="form-horizontal">
                                    <div class="col-sm-10">
                                        <div id="transport">
                                            @if (transportItems != null)
                                            {
                                                foreach (var transportItem in transportItems)
                                                {
                                                    <div class="checkbox col-md-4">
                                                        <label>
                                                            <input type="checkbox" @(transportItem.Checked ? "checked" : "") name="@transportItem.Id" id="@transportItem.Id" value="@transportItem.Id">@transportItem.Name
                                                        </label>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                <label for="transport" class="col-sm-2 control-label">Over night</label>
                                <div class="form-horizontal">
                                    <div class="col-sm-10">
                                        <div id="transport">
                                          
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success" onclick="saveItinerary();">Save itinerary</button>
                </div>
            </div>
        </div>
    </div>
    <div id="update-itinerary"></div>

}
else
{
    <p>Not content for this item</p>
}


@section Scripts {

    @Scripts.Render("~/bundles/tourjs")
}

