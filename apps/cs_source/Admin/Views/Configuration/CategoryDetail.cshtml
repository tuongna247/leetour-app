@{
    ViewBag.Active = "Category";
    ViewBag.Title = "Category Management";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@if (Model != null)
{
    <div class="page-title">
        <h3>Category Management</h3>
        <div class="page-breadcrumb">
            <ol class="breadcrumb">
                <li><a href="/">Dashboard</a></li>
                <li><a href="~/Configuration">Configuration</a></li>
                <li class="active">@Model.Name</li>
            </ol>
        </div>
    </div>

    <div id="main-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-white">
                    <div class="panel-body">
                        <a data-toggle="modal" data-target="#add-new-modal" class="btn btn-info btn-addon m-b-sm btn-xs"><i class="fa fa-plus"></i>Add new</a>

                        <div class="table-responsive">
                            <input id="category-id" type="hidden" value="@Model.Id" />

                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Name</th>
                                        <th scope="col" class="hidden-phone">Description</th>
                                        <th scope="col" class="hidden-phone">Description Vietnam</th>
                                        <th scope="col" class="hidden-phone">Description German</th>
                                        <th scope="col" class="hidden-phone">Description French</th>
                                        <th scope="col" class="hidden-phone">Description Danish</th>
                                        <th scope="col" class="hidden-phone">Crate Date</th>
                                        <th scope="col" class="action">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.CategoryDetails.Count > 0)
                                    {
                                        foreach (var categoryDetail in Model.CategoryDetails)
                                        {
                                            <tr>
                                                <td id="@categoryDetail.Id">@categoryDetail.Id</td>
                                                <td>@categoryDetail.Name</td>
                                                <td class="hidden-phone">@categoryDetail.Description</td>
                                                <td class="hidden-phone">@categoryDetail.DescriptionVn</td>
                                                <td class="hidden-phone">@categoryDetail.DescriptionGe</td>
                                                <td class="hidden-phone">@categoryDetail.DescriptionFr</td>
                                                <td class="hidden-phone">@categoryDetail.DescriptionDe</td>
                                                <td class="hidden-phone">@categoryDetail.CreatedDate.ToShortDateString()</td>
                                                <td class="action">
                                                    <span class="quick-menu-icon pull-right" style="cursor: pointer">
                                                        <a onclick="editForm('@categoryDetail.Id','@categoryDetail.Name','@categoryDetail.Description','@categoryDetail.DescriptionVn');">Edit</a>  |
                                                        <a onclick="deleteCategoryDetail('@categoryDetail.Id')">Delete</a>
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}
else
{
    <p>No content for this Item</p>
}
<div class="modal fade" id="add-new-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add new category</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label for="name">Name <span class="text-danger">*</span></label>
                        <input class="form-control" id="name" type="text" placeholder="Enter Name">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="description-en">Description <span class="text-danger">*</span></label>
                        <input class="form-control" id="description-en" type="text" placeholder="Enter Description">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="description-vn">Description Vietnam</label>
                        <input class="form-control" id="description-vn" type="text" placeholder="Enter Description Vietnam">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="description-ge">Description German</label>
                        <input class="form-control" id="description-ge" type="text" placeholder="Enter Description German">
                    </div>

                    <div class="form-group col-md-12">
                        <label for="description-fr">Description French</label>
                        <input class="form-control" id="description-fr" type="text" placeholder="Enter Description French">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="description-de">Description Danish</label>
                        <input class="form-control" id="description-de" type="text" placeholder="Enter Description Danish">
                    </div>
                    <div class="form-group col-md-12">
                        <div id="error-list" style="display: none;">
                            <div id="error-item" class="alert alert-danger" role="alert">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" onclick="insertCategoryDetail();" class="btn btn-success">Add new</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="edit-new-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Update new category</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label for="edit-name">Name <span class="text-danger">*</span></label>
                        <input class="form-control" id="edit-name" type="text" placeholder="Enter Name">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="edit-description-en">Description <span class="text-danger">*</span></label>
                        <input class="form-control" id="edit-description-en" type="text" placeholder="Enter Description">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="edit-description-vn">Description Vietnam</label>
                        <input class="form-control" id="edit-description-vn" type="text" placeholder="Enter Description">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="description-ge">Description German</label>
                        <input class="form-control" id="edit-description-ge" type="text" placeholder="Enter Nescription German">
                    </div>

                    <div class="form-group col-md-12">
                        <label for="description-fr">Description French</label>
                        <input class="form-control" id="edit-description-fr" type="text" placeholder="Enter Description French">
                    </div>
                    <div class="form-group col-md-12">
                        <label for="description-de">Description Danish</label>
                        <input class="form-control" id="edit-description-de" type="text" placeholder="Enter Description Danish">
                    </div>
                    <div class="form-group col-md-12">
                        <div id="edit-error-list" style="display: none;">
                            <div id="edit-error-item" class="alert alert-danger" role="alert">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="edit-category-id" value="" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" onclick="updateCategoryDetail();" class="btn btn-success">Save change</button>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/js/category.js"></script>