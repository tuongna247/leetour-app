@using Vinaday.Data.Models
@using Vinaday.Data.Models.Extention
@using Vinaday.Web.Home.Models
@{

    ViewBag.Title = "Tour List";
    Layout = null;
    List<TourBookingInDays> Departures = ViewBag.Departures;
    List<Country> countries = ViewBag.Countries;
    var index = 0;
}
<!DOCTYPE html>
<html>
<head>
    <title>Small Group Tour Departure Schedule - Last minute Small Group Tour Booking in Vietnam, Laos, Cambodia, Myanmar by VINADAY TRAVEL </title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0">
    <meta http-equiv="content-language" content="en-us" />
    <meta name="description" content="VINADAY goREISE (Vinaday Travel) specializing in arranging and managing quality tourism destinations  for people travelling within Vietnam, Laos, Cambodia, Thailand, Myanmar. Our popular trips are Mekong Delta Trip, Cu Chi Tunnels …">
    <link rel="alternate" href="https://goreise.com" hreflang="en-us"/>
    @*@Styles.Render("~/Content/vinaday")*@
    <link href="https://cdnvinadaytravel-e29d.kxcdn.com/Content/vinaday?v=324xunJYexmycrNxs7PrOr9pT2yDE6POU_MItYH5Gas1" rel="stylesheet" />
    <link rel="alternate" hreflang="en-gb" href="alternateURL">
    <link href="~/Content/plugins/countdown/assets/countdown/jquery.countdown.css" rel="stylesheet" />
    <link href="~/Content/search.css" rel="stylesheet" />
    <link href="~/Content/tours/style.css" rel="stylesheet" />
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-68154187-14"></script>

    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-68154187-21');
    </script>
</head>
<body ng-controller="hotelController">
    <div id="outer-wrap">
        <div id="inner-wrap" itemtype="http://schema.org/Hotel" itemscope="">
            @Html.Partial("_Header")

            <section class="services services-home hidden-xs">
                <div class="container">
                    <div>
                        <ul>
                            <li class="hidden-xs hidden-sm">
                                <div class="title-services">vinadaytravel.com gives you:</div>
                            </li>
                            <li>
                                <span class="fa fa-shopping-cart"></span>
                                <p class="caption-services">
                                    Browse our website for  travel ideas <br />and holiday inspiration
                                </p>
                            </li>
                            <li>
                                <span class="fa fa-car"></span>
                                <p class="caption-services">
                                    Call us on (+84)028388387 to  <br />speak to Travel Consultant.
                                </p>
                            </li>
                            <li>
                                <span class="fa fa-plane"></span>
                                <p class="caption-services">
                                    Reading our monthly brochure to  <br />make you’re absolutely happy to book
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>


            <section class="sales">
                <!-- Title -->
                <!-- End Title -->
                <!-- Hot Sales Content -->
                <div class="container" style="padding-top: 10px;">
                    <h2 class="center" style="text-align: center; padding: 10px;background-color: white">Last Minute Small Group Tour Booking</h2>
                    <div class="sales-cn">
                        <div>
                            <div style="background-color: white; width: 100%; padding: 10px;">
                                <form action="~/small-group-tour-departuring" method="post">
                                    <table style="width: 400px; padding: 10px;">
                                        <tr>
                                            <td>
                                                <div class="input-group date">
                                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                    <input id="fromdate" name="fromdate" value="@ViewBag.FromDate" type="text" style="border:solid 1px #ccc;width:100%;"  class="form-control" placeholder="from date">
                                                </div>

                                            </td>
                                            <td>
                                                <div class="input-group date">
                                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                    <input id="todate" name="todate" value="@ViewBag.ToDate" type="text" style="border:solid 1px #ccc;width:100%;"  class="form-control" placeholder="to date">
                                                </div>
                                            </td>
                                            <td style="padding-left: 10px;">
                                                <input type="submit" class="btn btn-sm btn-primary" value="Search" />
                                            </td>
                                        </tr>
                                    </table>
                                </form>

                            </div>

                            @if (Departures != null && Departures.Count > 0)
                            {
                                <div class="table-departure ng-scope" data-template="peak-shortcode-departure--display-table" peak-departure-show-more="">
                                    <div class="table-departure__collection">
                                        @foreach (var departure in Departures)
                                        {
                                            <table class="table table-striped table-td-middle-align" style="background-color: white">
                                                <tbody>
                                                    <tr>
                                                        <td>Departing <b> @departure.DepartDate.ToString("D")</b></td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            <table class="table-hover" style="width: 100%;">
                                                                <tr>
                                                                    <th class="text-left">Service</th>
                                                                    <th class="text-left">Durations</th>
                                                                    <th class="text-center">Status</th>
                                                                    <th class="text-center">Total From USD</th>
                                                                </tr>
                                                                @if (departure.TourBookingInDayList != null && departure.TourBookingInDayList.Count > 0)
                                                                {
                                                                    foreach (var service in departure.TourBookingInDayList)
                                                                    {
                                                                        if (!string.IsNullOrEmpty(service.Total))
                                                                        {
                                                                            var link = Url.Content(string.Format("~/tour/{0}-p{1}?country={2}", service.Slug, service.TourId, service.Country));
                                                                            <tr>
                                                                                <td class="text-left">@service.SerViceName</td>
                                                                                <td class="text-left">@service.Durration</td>
                                                                                <td class="text-center" @if (!service.Status.Contains("Available"))
                                                                                    {<text>style="color:red" </text>
                                                                                    }  >
                                                                                    
                                                                                    
                                                                                    @service.Status
                                                                                </td>
                                                                                <td class="text-center">@service.Total </td>
                                                                                <td class="text-center"><a href="@link" target="_blank"> Book Now</a></td>
                                                                            </tr>
                                                                        }

                                                                    }
                                                                }


                                                            </table>
                                                        </td>
                                                    </tr>

                                                </tbody>
                                            </table>
                                        }

                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <!-- End Hot Sales Content -->
            </section>
            <!-- End Sales -->
            <!-- Travel destinations -->

        </div>
    </div>

    @Html.Partial("_Footer")
    @*@Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/modernizr")*@
    <script src="https://cdnvinadaytravel-e29d.kxcdn.com/bundles/app?v=d-IMTlnF0NyZiuNbKk0lB2krz1X2wtbv0L02v1DgX2I1"></script>
    <script src="https://cdnvinadaytravel-e29d.kxcdn.com/bundles/modernizr?v=inCVuEFe6J4Q07A0AcRsbJic_UE5MwpRMNGcOtk94TE1"></script>
    <script>
        $('#country-tour option[value=-1]').prop('selected', true);
        var date = new Date();
        var today = new Date(date.getFullYear(), date.getMonth(), date.getDate());
        $('.input-group.date').datepicker({
            todayBtn: "linked",
            startDate: '1d',
            keyboardNavigation: false,
            forceParse: false,
            calendarWeeks: true,
            autoclose: true
        });


    </script>

    <link rel="stylesheet" href="@Url.Content("~/Content/css/style.css")">
    <script src="~/Content/plugins/countdown/assets/countdown/jquery.countdown.js"></script>
    <script src="~/Content/plugins/countdown/assets/js/script.js"></script>
    <script src="~/Content/plugins/QuotesRotator/js/jquery.cbpQTRotator.min.js"></script>
    <script src="~/Scripts/app1/home.js"></script>
    <script src="~/Scripts/offcanvas-navigation.js"></script>
    <script src="~/Scripts/tours/js/common.js"></script>

    <a href="#" id="backToTop"></a>
</body>
</html>
