                                                    <strong itemprop="reviewBody">Service</strong>
                                                  <span itemtype="http://schema.org/Rating" itemscope="" itemprop="reviewRating" style="float: right">
                                                        <span itemprop="ratingValue" style="float: left">@((review.ReviewDetail.Service * 2).ToString("#.#"))</span>/<span itemprop="bestRating" style="float: right">10</span>
                                                    </span>
                                                    <div class="progress">
