@if (Model.Count > 0)
{
    <label for="room-id">Room list</label>
    <select id="room-id" class="form-control">
        @foreach (Vinaday.Data.Models.Extention.RoomModel room in Model)
        {
            <option value="@room.Id">@room.Name</option>
        }
    </select>
}
else
{
    <div class="form-group">
        <label>Room list</label>
        <div class="alert alert-danger" style="margin-bottom: -5px;" role="alert">
            No available room for this hotel.
        </div>
    </div>
}