@model List<Vinaday.Data.Models.Country>
@if (Model.Count > 0)
{
    <table id="table-countries" class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col" class="hidden-phone">Short Name</th>
                <th scope="col" class="hidden-phone">Name</th>
                <th scope="col" class="hidden-phone">Name vietnam</th>
                <th scope="col" class="hidden-phone">Capital</th>
                <th scope="col" class="action" style="text-align: center;width: 200px">Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var country in Model)
            {
                <tr>
                    <td id="@country.CountryId">@country.CountryId</td>
                    <td class="hidden-phone">@country.ShortName</td>
                    <td class="hidden-phone">@country.Name</td>
                    <td class="hidden-phone">@country.NameVn</td>
                    <td class="hidden-phone">@country.Capital</td>
                    <td class="action" style="text-align: center; width: 200px">
                        <span class="quick-menu-icon" style="cursor: pointer">
                            <a class="btn btn-success btn-xs" onclick="editForm('@country.CountryId', '@country.Name', '@country.NameVn');"><small class="glyphicon glyphicon-edit"></small></a>
                            <a disabled class="btn btn-danger btn-xs" onclick="deleteCountry('@country.CountryId')"><small class="glyphicon glyphicon-trash"></small></a>
                        </span>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p>No content for this Item</p>
}