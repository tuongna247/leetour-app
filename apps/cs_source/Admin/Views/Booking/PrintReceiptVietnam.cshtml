                                        decimal.TryParse(order.SurchargeFee, out surchargeFee);
                                        <div>
                                            <h4 class="no-m m-t-sm">Surcharge</h4>
                                            <h2 class="no-m">
                                                -@Utilities.RoundingTo(string.Format("{0:N0}", surchargeFee), 500)<sup>đ</sup>
                                            </h2>
                                            <hr>
                                        </div>
                                    }
                                    @if (order.ExtraBed > 0)
                                    {
                                        <div>

                                            <h4 class="no-m m-t-sm">Extra Bed Fee</h4>
                                            <h2 class="no-m">
                                                +@Utilities.RoundingTo(string.Format("{0:N0}", order.ExtraBed), 500)<sup>đ</sup>
                                            </h2>
                                            <hr>
                                        </div>
                                    }
                                    @if (order.ThirdPersonFee > 0)
